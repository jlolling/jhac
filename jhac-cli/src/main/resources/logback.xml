<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{1} %method - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="none">
        <appender-ref ref="console"/>
    </root>
</configuration>
